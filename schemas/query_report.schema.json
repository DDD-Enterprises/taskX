{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/query_report.schema.json",
  "title": "QueryReport",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_id",
    "generated_at",
    "queries",
    "pass",
    "warnings"
  ],
  "properties": {
    "schema_version": { "type": "string", "minLength": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "generated_at": { "type": "string", "format": "date-time" },

    "queries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["query_id", "query_text", "top_k", "result_count"],
        "properties": {
          "query_id": { "type": "string", "minLength": 1 },
          "query_text": { "type": "string", "minLength": 1 },
          "top_k": { "type": "integer", "minimum": 1 },
          "result_count": { "type": "integer", "minimum": 0 }
        }
      }
    },

    "pass": { "type": "boolean" },
    "warnings": { "type": "array", "items": { "type": "string" } },
    
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "answer_path": { "type": "string" },
        "llm_envelope_path": { "type": "string" },
        "synthesis_provider": { "type": "string" },
        "synthesis_model": { "type": "string" }
      }
    }
  }
}