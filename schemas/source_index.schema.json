{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Source Index Schema",
  "description": "Index of markdown documentation files scanned for spec mining",
  "required": [
    "schema_version",
    "pipeline_version",
    "generated_at",
    "inputs",
    "files",
    "aggregate"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of this source index schema",
      "const": "1.0"
    },
    "pipeline_version": {
      "type": "string",
      "description": "Version of the ChatX pipeline",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "generated_at": {
      "type": "string",
      "description": "UTC ISO timestamp of generation",
      "format": "date-time"
    },
    "inputs": {
      "type": "object",
      "required": ["include_globs", "exclude_globs", "max_file_kb"],
      "additionalProperties": false,
      "properties": {
        "include_globs": {
          "type": "array",
          "description": "Glob patterns for files to include",
          "items": {
            "type": "string"
          }
        },
        "exclude_globs": {
          "type": "array",
          "description": "Glob patterns for files to exclude",
          "items": {
            "type": "string"
          }
        },
        "max_file_kb": {
          "type": "integer",
          "description": "Maximum file size in KB",
          "minimum": 1
        }
      }
    },
    "files": {
      "type": "array",
      "description": "Indexed markdown files, sorted by path",
      "items": {
        "type": "object",
        "required": ["path", "sha256", "bytes", "line_count", "headings"],
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string",
            "description": "Repository-relative path"
          },
          "sha256": {
            "type": "string",
            "description": "SHA256 hash of file content",
            "pattern": "^[a-f0-9]{64}$"
          },
          "bytes": {
            "type": "integer",
            "description": "File size in bytes",
            "minimum": 0
          },
          "line_count": {
            "type": "integer",
            "description": "Number of lines in file",
            "minimum": 0
          },
          "headings": {
            "type": "array",
            "description": "Extracted markdown headings",
            "items": {
              "type": "object",
              "required": ["level", "text", "line_no"],
              "additionalProperties": false,
              "properties": {
                "level": {
                  "type": "integer",
                  "description": "Heading level (1-6)",
                  "minimum": 1,
                  "maximum": 6
                },
                "text": {
                  "type": "string",
                  "description": "Heading text"
                },
                "line_no": {
                  "type": "integer",
                  "description": "Line number (1-indexed)",
                  "minimum": 1
                }
              }
            }
          }
        }
      }
    },
    "aggregate": {
      "type": "object",
      "required": ["file_count", "total_bytes", "corpus_hash"],
      "additionalProperties": false,
      "properties": {
        "file_count": {
          "type": "integer",
          "description": "Total number of files indexed",
          "minimum": 0
        },
        "total_bytes": {
          "type": "integer",
          "description": "Total bytes across all files",
          "minimum": 0
        },
        "corpus_hash": {
          "type": "string",
          "description": "SHA256 hash of concatenated file hashes in sorted order",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    }
  }
}
