{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://taskx.dev/schemas/task_packet_manifest.schema.json",
  "title": "Task Packet Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "run_dir",
    "run_id",
    "created_at",
    "task_packet_id",
    "mode",
    "commands",
    "artifacts_expected",
    "artifacts_found",
    "status"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "run_dir": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "task_packet_id": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string",
      "minLength": 1
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "idx",
          "cmd",
          "cwd",
          "started_at",
          "ended_at",
          "exit_code",
          "stdout_path",
          "stderr_path",
          "truncated"
        ],
        "properties": {
          "idx": {
            "type": "integer",
            "minimum": 1
          },
          "cmd": {
            "oneOf": [
              {
                "type": "string",
                "minLength": 1
              },
              {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "cwd": {
            "type": "string",
            "minLength": 1
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "ended_at": {
            "type": "string",
            "format": "date-time"
          },
          "exit_code": {
            "type": "integer"
          },
          "stdout_path": {
            "type": "string",
            "minLength": 1
          },
          "stderr_path": {
            "type": "string",
            "minLength": 1
          },
          "truncated": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "artifacts_expected": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "artifacts_found": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "passed",
        "failed"
      ]
    },
    "notes": {
      "type": "string"
    }
  }
}
