{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task Queue Patch",
  "description": "Schema for task queue patch files generated by spec feedback loop",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "pipeline_version",
    "generated_at",
    "timestamp_mode",
    "inputs",
    "patches"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "pipeline_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "timestamp_mode": {
      "type": "string",
      "enum": ["deterministic", "wallclock"]
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "task_queue_path",
        "run_ids",
        "input_hash"
      ],
      "properties": {
        "task_queue_path": {
          "type": "string"
        },
        "run_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "input_hash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      }
    },
    "patches": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "task_id",
          "op",
          "value",
          "reason",
          "evidence"
        ],
        "properties": {
          "task_id": {
            "type": "string",
            "pattern": "^TP_\\d{4}$"
          },
          "op": {
            "type": "string",
            "enum": ["set_priority", "set_risk", "append_note", "set_status"]
          },
          "value": {
            "oneOf": [
              {"type": "string"},
              {"type": "integer"}
            ]
          },
          "reason": {
            "type": "string"
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["run_id", "claim_id"],
              "properties": {
                "run_id": {
                  "type": "string"
                },
                "claim_id": {
                  "type": "string",
                  "pattern": "^TP_\\d{4}_C\\d{3}$"
                }
              }
            }
          }
        }
      }
    }
  }
}
